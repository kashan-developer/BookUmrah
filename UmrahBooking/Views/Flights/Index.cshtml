@* @model UmrahBooking.ViewModels.Flights_VM.FlightApiResponse *@
@{
    ViewData["Title"] = "Home Page";
    Layout = "../Shared/_Layout.cshtml";
}
<div class="container">
    <partial name="..\Partials\_ChooseStepper"></partial>
    <div class="d-flex flex-row fs-3 text-center mt-5" style="font-family:Open Sans;background-color:#E39146;">
        <div class="row w-100 mt-3">
            <div class="col-5 fs-19px text_step fw-bold" style="">
                <span>You Searched for : Mecca - > Madinah - > Madinah - > Mecca</span>
            </div>
            <div class="col-4 fs-20px text_step fw-bold">
                <span class="text-danger">(Fri, 27 Oct - Mon, 20 Nov) | 20 Adults</span>
            </div>
            <div class="col-3">
                <a asp-action="Index" asp-controller="Home" class="btn btn-dark rounded-pill btn_search mb-xl-2 mb-lg-2 mt-sm-4 mt-lg-0 mt-xl-0 mt-md-0" style="">Modify Search</a>
            </div>
        </div>

    </div>
    <div class="d-flex flex-row justify-content-end mt-5 mb-4">
        <select class="ms-3 price_dropdown" id="dropdown">
            <option value="large-first">Price (Highest first)</option>
            <option value="small-first">Price (Lowest first)</option>
        </select>
    </div>
        <div data-id="FlightsDetails">
           
        </div>

</div>


@section Scripts {
    <link rel="stylesheet" href="~/css/TicketBook.css" asp-append-version="true" />
    <script src="~/js/Flights.js" asp-append-version="true"></script>

}