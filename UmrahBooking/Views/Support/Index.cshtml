@{
    ViewData["Title"] = "Home Page";
    Layout = "../Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row d-sm-flex flex-row justify-content-center mt-5">
        <div class="div_container">
            <div style="border-bottom: 1px solid;">
                <p class="text-center pt-2 text-danger fw-bold">Fare Summary</p>
            </div>
            <div class="accordion" id="accordionPanelsStayOpenExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                        <button class="accordion-button fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                            Journey
                        </button>
                    </h2>
                    <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                        <div class="accordian_body">
                            <div>
                                <div class="d-flex mt-2" style="margin-left:1rem;">
                                    <input class="me-2" type="checkbox"><p style="font-size:small;">&nbsp;Airport to Hotel(JED-MAK)</p>
                                </div>
                                <div class="d-flex mt-2" style="margin-left:1rem;">
                                    <input class="me-2" type="checkbox"><p style="font-size: small;">&nbsp;Madinah Hotel to Airport(Med-Med)</p>
                                </div>
                                <div class="d-flex mt-2" style="margin-left:1rem;">
                                    <input class="me-2" type="checkbox"><p style="font-size: small;">&nbsp;Makkah to Madinah(MAK-MED)</p>
                                </div>
                                <div class="d-flex mt-2" style="margin-left:1rem;">
                                    <input class="me-2" type="checkbox"><p class="fw-bold mb-4">&nbsp;Full Round Transport</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                        <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                            Visit Historical Places
                        </button>
                    </h2>
                    <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
                        <div class="accordian-body">
                            <div class="mt-3">
                                <div class="d-flex mt-2" style="margin-left:1rem;">
                                    <input class="me-2" type="checkbox"><p class="fw-bold mb-4">&nbsp;Ziyaara in Makkah</p>
                                </div>
                                <div class="d-flex mt-2" style="margin-left:1rem;">
                                    <input class="me-2" type="checkbox"><p class="fw-bold mb-4">&nbsp;Ziyaara In Madinah</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-lg-8 col-sm-12 bg-light ms-lg-5 mb-5 pb-3 mt-xl-0 mt-lg-0 mt-md-0 mt-sm-5 mt-5" style="height:auto;border-radius:2.5rem">
            <div class="row mt-3 overflow-hidden">
                <h3 class="fw-light ms-5">Customer Service</h3>
                <hr />
                <h4 class="fw-bold ms-1 mt-0 text-blue">Welcome to UmrahShop Support:</h4>
                <hr />
                <p class="text-dark fs-sm-12px">
                    Our comprehensive support centre will have all the information you need.There’s information for flights, hotels, tourist visas, Umrah visas, transfers or
                    transport in Saudi Arabia, Umrah Guide and many other useful information.You can also follow our blog which provides very useful articles from our
                    experienced team to help you plan your journey. See here:If you need any
                    help or further information or clarification, please do not hesitate to contact
                    our customer relations department at: support@umrahshop.com or
                    alternatively call our number on: 00966 59 83 82 599 .
                </p>
                <h4 class="fw-bold ms-1 mt-0 text-blue">Confirmation status :</h4>
                <p class="text-dark  fs-sm-12px">
                    You will receive your flight e-ticket, hotel confirmation vouchers and transport
                    vouchers within 24 hours of making your payment and booking. Tourist e-visas will be issued within 24 hours and emailed to you from our visa
                    department.Umrah e-visas will also be issued and emailed to you within 3
                    working days.See visa support section for more information here regarding
                    tourist visas and umrah visa.
                </p>
                <h4 class="fw-bold ms-1 mt-0 text-blue">Booking status : </h4>
                <p class="text-dark  fs-sm-12px">
                    Once you have completed payment on the booking page, you will receive an
                    email indicating the status of each part of your tailor made Umrah Package:
                </p>
                <h4 class="fw-bold ms-1 mt-0 text-blue">Confirmed booking :  </h4>
                <p class="text-dark  fs-sm-12px">
                    All set, you just need to pack your bags and check-in. All of your documents
                    should be emailed to you and also available for you to download on your
                    log-in page.
                </p>
                <h4 class="fw-bold ms-1 mt-0 text-blue">
                    Booking request received
                </h4>
                <p class="text-dark fs-sm-12px">
                    We may need some more time to process your booking. Don’t worry, you
                    don’t need to contact us or make a new booking, we will send you a
                    confirmation within 24 hours.
                </p>
                <h4 class="fw-bold ms-1 mt-0 text-blue">
                    Booking cancelled or payment declined
                </h4>
                <p class="text-dark fs-sm-12px">
                    Once you have completed payment on the booking page, you will receive
                    an email indicating the status of each part of your tailor made
                    Umrah Package:
                </p>
                <h4 class="fw-bold ms-1 mt-0 text-blue">
                    Payment and ticket issuance
                </h4>
                <p class="text-dark fs-sm-12px">
                    Your electronic tickets will be issued within a term of 24 hours after payment
                    has been validated. In most cases, tickets are issued minutes after payment
                    has been confirmed. Our system makes a number of security checks in order
                    to guarantee a 100% safe transaction. This may delay the issue of your tickets
                    for some hours. If your transaction does not pass our security checks, we will
                    contact you via e-mail. If you have received an email indicating that your
                    booking is being processed but haven’t received an update within 24 hours,
                    please contact us.
                </p>
                <h4 class="fw-bold ms-1 mt-0 ms-3 text-blue">Login Help</h4>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <link rel="stylesheet" href="~/css/Support.css" asp-append-version="true" />
}