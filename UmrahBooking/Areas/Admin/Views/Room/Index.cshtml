@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<button type="button" class="btn btn-dark ms-5 my-3" data-bs-toggle="modal" data-bs-target="#roomModal">
    Add Room
</button>

<div class="d-flex flex-column align-items-center hotel-form-height w-100">
    <div class="table_width bg-white p-2 rounded">
        <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
            <div class="col-sm-12">
                <table id="data_tabel" class="table table-bordered dataTable dtr-inline" aria-describedby="example2_info">
                    <thead>
                        <tr>
                            <th class="sorting sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">HOTEL NAME</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">ROOM COUNT</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">ROOM TYPE</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">FLOOR</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">BED TYPE</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">AMENITIES</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">PRICE</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Max Occupancy</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Availability</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Le Merdin</td>
                            <td>1</td>
                            <td>Double</td>
                            <td>3</td>
                            <td>King</td>
                            <td>Free Wifi , LED TV</td>
                            <td>900$</td>
                            <td>2</td>
                            <td>Yes</td>
                            <td><i data-modal="editdatamodal" class="fas fa-pencil-alt cursor_event"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="roomModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Room</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-row mt-3">
                    <div class="w-50 me-4">
                        <label class="form-label fw-bold">Select Hotel</label>
                        <select class="form-select border-0 border-bottom border-secondary   rounded-0">
                            <option>Le meridin Hotel</option>
                            <option>Elaf Kinda Hotel</option>
                            <option>Durat Mina Hotel</option>
                        </select>
                    </div>
                    <div class="w-50">
                        <label class="form-label fw-bold">Room Count</label>
                        <input type="number" class="form-control border-0 border-bottom border-secondary   rounded-0" placeholder="Enter Room Count" />
                    </div>
                </div>
                <div class="d-flex flex-row mt-3">
                    <div class="w-50 me-4">
                        <label class="form-label fw-bold">Room Type</label>
                        <select class="form-select border-0 border-bottom border-secondary   rounded-0">
                            <option>Single</option>
                            <option>Double</option>
                            <option>Deluxe</option>
                        </select>
                    </div>
                    <div class="w-50">
                        <label class="form-label fw-bold">Floor</label>
                        <input type="text" class="form-control border-0 border-bottom border-secondary   rounded-0" placeholder="Enter Floor Number" />
                    </div>
                </div>
                <div class="d-flex flex-row mt-3">
                    <div class="w-50 me-4">
                        <label class="form-label fw-bold">Bed Type</label>
                        <select class="form-select border-0 border-bottom border-secondary   rounded-0">
                            <option>King</option>
                            <option>Queen</option>
                            <option>Twin</option>
                        </select>
                    </div>
                    <div class="w-50">
                        <label class="form-label fw-bold">Amenities</label>
                        <input type="text" class="form-control border-0 border-bottom border-secondary  rounded-0" placeholder="Enter Floor Number" />
                    </div>
                </div>
                <div class="d-flex flex-row mt-3">
                    <div class="w-50 me-4">
                        <label class="form-label fw-bold">Mac Occupancy</label>
                        <input type="number" class="form-control border-0 border-bottom border-secondary  rounded-0" placeholder="max occupancy" />
                    </div>
                    <div class="w-50">
                        <label class="form-label fw-bold">Availability</label>
                        <select class="form-select border-0 border-bottom border-secondary  rounded-0">
                            <option>Yes</option>
                            <option>No</option>
                        </select>
                    </div>
                </div>
                <div class="mt-3">
                    <label class="form-label fw-bold">Price</label>
                    <ul class="list-group">
                        <li class="list-group-item">From 1-3 : 90$</li>
                        <li class="list-group-item">From 4-10 : 100$</li>
                        <li class="list-group-item">From 11-30 : 120$</li>
                    </ul>
                </div>
                <div class="mt-3">
                    <div action="/upload" class="dropzone" id="mydropzone">
                        <div class="fallback">
                            <input name="file" type="file" multiple />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-dark">Add</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link href="~/css/admin.css" rel="stylesheet" />
}