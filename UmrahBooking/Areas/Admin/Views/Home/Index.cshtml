@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between">
    <button type="button" class="btn btn-dark ms-5 my-3" data-bs-toggle="modal" data-bs-target="#hotelModal">
        Add Hotel
    </button>
    <a href="@Url.Action("Index", "Room", new { area = "Admin" })" class="btn btn-dark room_btn_height mt-3 me-5">Room Management</a>
</div>



<div class="d-flex flex-column align-items-center hotel-form-height w-100">
    <div class="table_width bg-white p-2 rounded">
        <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
            <div class="col-sm-12">
                <table id="data_tabel" class="table table-bordered dataTable dtr-inline" aria-describedby="example2_info">
                    <thead>
                        <tr>
                            <th class="sorting sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">NAME</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">EMAIL</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">PHONE NUMBER</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">CITY</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">COUNTRY</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">ADDRESS</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">DESCRIPTION</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Le Merdin</td>
                            <td>admin@gmail.com</td>
                            <td>03093238421</td>
                            <td>Makkah</td>
                            <td>Saudi Arabia</td>
                            <td>makkah</td>
                            <td>Hotel Description</td>
                            <td><i data-edit="edit-data" class="fas fa-pencil-alt cursor_event"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="hotelModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Hotel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-row">
                    <div class="w-50 me-4">
                        <label class="form-label fw-bold">Name</label>
                        <input type="text" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="enter name" />
                    </div>
                    <div class="w-50">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="enter email" />
                    </div>
                </div>
                <div class="d-flex flex-row mt-3">
                    <div class="w-50 me-4">
                        <label class="form-label fw-bold">Phone Number</label>
                        <input type="text" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="enter phone number" />
                    </div>
                    <div class="w-50">
                        <label class="form-label fw-bold">City</label>
                        <input type="text" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="enter city name" />
                    </div>
                </div>
                <div class="d-flex flex-row mt-3">
                    <div class="w-50 me-4">
                        <label class="form-label fw-bold">Country</label>
                        <input type="text" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="enter country name" />
                    </div>
                    <div class="w-50">
                        <label class="form-label fw-bold">Address</label>
                        <input type="text" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="enter address" />
                    </div>
                </div>
                <div class="d-flex flex-row mt-3">
                    <div class="w-50 me-4">
                        <label class="form-label fw-bold">Description</label>
                        <input type="text" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="enter country name" />
                    </div>
                    <div class="w-50">
                        <label class="form-label fw-bold">Total Rooms</label>
                        <input type="number" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="total rooms" />
                    </div>
                </div>
                <div class="d-flex flex-row mt-3">
                    <div class="w-50 me-4">
                        <label class="form-label fw-bold">Available Rooms</label>
                        <input type="number" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="available rooms" />
                    </div>
                    <div class="w-50">
                        <label class="form-label fw-bold">Booked Rooms</label>
                        <input type="number" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="booked rooms" />
                    </div>
                </div>
                <div class="mt-3">
                    <input id="pac-input" class="controls form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" type="text" placeholder="Search Box">
                    <div id="map" class="mt-2" style="width:100% !important;height:200px !important;"></div>
                    <div class="d-flex flex-row mt-3">
                        <div class="w-50 me-4">
                            <label class="form-label fw-bold">Latitude</label>
                            <input type="text" id="latitude" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="latitude" />
                        </div>
                        <div class="w-50">
                            <label class="form-label fw-bold">Longitude</label>
                            <input type="text" id="longitude" class="form-control border-0 border-bottom border-secondary hotel_form_background rounded-0" placeholder="longitude" />
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <div action="/upload" class="dropzone" id="mydropzone">
                        <div class="fallback">
                            <input name="file" type="file" multiple />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-dark">Add</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link href="~/css/admin.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAr_E1lPTbrhYOhxlNh29lXO9VoKZce_Wg&libraries=places&callback=initMap" async defer></script>
}